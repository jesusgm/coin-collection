---
import Layout from "../../layouts/index.astro";
import coins from "../../data/coins.json";

export async function getStaticPaths() {
  return coins.map(({ id, year, country, name, value, images }) => {
    return {
      params: { id },
      props: { year, country, name, value, images },
    };
  });
}

const { year, country, name, value, images } = Astro.props;
---

<Layout>
  <main>
    <a href="/coin-collection/">Atr√°s</a>
    <h1>Name: {value} {name}</h1>
    <p>Year: {year}</p>
    <p>Country: {country}</p>

    <p>Images:</p>
    <div class="w-full flex flex-row">
      <img class="h-96" src={images.front} alt="Front image" />
      <img class="h-96" src={images.back} alt="Back image" />
    </div>
  </main>
</Layout>
